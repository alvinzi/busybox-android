<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="stericson.busybox.donate"
      android:versionName="9.1" android:versionCode="132">
            
    <application android:icon="@drawable/icon" android:label="BusyBox Pro" android:theme="@style/CustomButton" >

        <service android:name=".services.AppletService"></service>
		<activity android:configChanges="keyboard|keyboardHidden|orientation|screenLayout"
		    	  android:name=".Activity.MainActivity"
		          android:label="BusyBox Pro" android:launchMode="singleTop">
		    <intent-filter>
		        <action android:name="android.intent.action.MAIN" />
		        <category android:name="android.intent.category.LAUNCHER" />
		    </intent-filter>
		</activity>
		
		<receiver android:name=".receivers.OnUpgradeReceiver">
		  <intent-filter>
		    <action android:name="android.intent.action.PACKAGE_REPLACED" />
		    <data android:scheme="package" android:path="stericson.busybox.donate" />
		  </intent-filter>
		</receiver>

	</application>
        
	<uses-sdk android:minSdkVersion="4" android:targetSdkVersion="11"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <supports-screens
          android:largeScreens="true"
          android:normalScreens="true"
          android:smallScreens="true"
          android:anyDensity="true" />
</manifest> 